/* Lógico_1: */

CREATE TABLE Cliente (
    Nome VARCHAR,
    Cpf VARCHAR,
    Telefone VARCHAR,
    Endereco VARCHAR,
    E_mail VARCHAR,
    Sexo VARCHAR,
    Data_de_Nascimento VARCHAR,
    Estado_Civil VARCHAR,
    Id VARCHAR PRIMARY KEY,
    fk_Venda_Id VARCHAR
);

CREATE TABLE Produto (
    Id VARCHAR PRIMARY KEY,
    Quantidade int,
    Preco int,
    Validade VARCHAR,
    Nome VARCHAR,
    Descricao VARCHAR,
    Imagem VARCHAR
);

CREATE TABLE Vendedor (
    Nome VARCHAR,
    Usuario VARCHAR,
    Senha VARCHAR,
    Id VARCHAR PRIMARY KEY,
    E_mail VARCHAR,
    fk_Venda_Id VARCHAR
);

CREATE TABLE Venda (
    Id VARCHAR PRIMARY KEY,
    Forma_De_Pagamento VARCHAR,
    Data_ Datetime
);

CREATE TABLE Relacionamento_2 (
    fk_Venda_Id VARCHAR,
    fk_Produto_Id VARCHAR
);
 
ALTER TABLE Cliente ADD CONSTRAINT FK_Cliente_2
    FOREIGN KEY (fk_Venda_Id)
    REFERENCES Venda (Id)
    ON DELETE CASCADE;
 
ALTER TABLE Vendedor ADD CONSTRAINT FK_Vendedor_2
    FOREIGN KEY (fk_Venda_Id)
    REFERENCES Venda (Id)
    ON DELETE CASCADE;
 
ALTER TABLE Relacionamento_2 ADD CONSTRAINT FK_Relacionamento_2_1
    FOREIGN KEY (fk_Venda_Id)
    REFERENCES Venda (Id)
    ON DELETE RESTRICT;
 
ALTER TABLE Relacionamento_2 ADD CONSTRAINT FK_Relacionamento_2_2
    FOREIGN KEY (fk_Produto_Id)
    REFERENCES Produto (Id)
    ON DELETE SET NULL;